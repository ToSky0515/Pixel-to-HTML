<!doctype html>
<html lang="{{locale}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>BikeShop</title>
    {% if page_description %}<meta name="description" content="{{ page_description | escape }}"> {% endif %}

    <meta name="theme-color" content="#000000">

    {{ 'vendor.scss' | asset_url | stylesheet_tag }}
    {{ 'main.scss' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body>
    <div class="is-hidden">{% include 'svg-icons' %}</div>

    <main>
      {{ content_for_layout }}
    </main>

    {% comment %}
      jQuery because usually all of Shopify Plugins and app use it, so might as well...
    {% endcomment %}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    {% comment %}
      Here we are setting up webpack for codesplit
      https://webpack.js.org/configuration/output/#output-publicpath
    {% endcomment %}
    {% capture randomFile %}{{ 'esketit.js' | asset_url }}{% endcapture %}
    {% assign assetsPath = randomFile | split: 'esketit.js' | first %}
    <script>
      window.__webpack_public_path__ = "{{ assetsPath }}"
    </script>
    {% comment %}
      Our actual js bundle async
    {% endcomment %}
    <script src="{{ 'main.js' | asset_url }}" async></script>
  </body>
</html>
